{
  "parser": "babel-eslint",
  "rules": {
    "eqeqeq": 2,
    "no-var": 2,
    "comma-dangle": [2, "always-multiline"],
    "semi": [2, "always"],
    "no-console": 0,
    "no-unused-vars": [2, {"args": "none"}],
    "eol-last": 2,
    "no-tabs": 2,
    "indent": ["error", 2]
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "mocha": true,
    "commonjs": true
  },
  "extends": [
    "eslint:recommended"
  ]
}
